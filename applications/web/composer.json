{
    "name": "ewallet/web",
    "description": "Ewallet web application",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ewallet/domain": "^1.0",
        "hexagonal/doctrine": "^1.0",
        "monolog/monolog": "^1.16",
        "slim/slim": "^3.4",
        "twig/twig": "^2.5",
        "vlucas/phpdotenv": "^2.0"
    },
    "require-dev": {
        "codeception/codeception": "~2.3",
        "consolidation/robo": "^1.0",
        "mockery/mockery": "dev-master",
        "nelmio/alice": "^2.0",
        "phpunit/phpunit": "^6.0"
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ewallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": [
                "vendor/ewallet/domain/tests/src"
            ]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/ewallet/domain"
        },
        {
            "type": "path",
            "url": "../../packages/hexagonal/hexagonal"
        },
        {
            "type": "path",
            "url": "../../packages/hexagonal/doctrine"
        }
    ]
}
