{
    "name": "ewallet/validation",
    "description": "Ewallet input validation port.",
    "license": "MIT",
    "version": "1.0",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ewallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": "vendor/ewallet/domain/tests/src"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../hexagonal/hexagonal"
        },
        {
            "type": "path",
            "url": "../domain"
        },
        {
            "type": "path",
            "url": "../application"
        },
        {
            "type": "path",
            "url": "../doctrine"
        }
    ],
    "require": {
        "ewallet/application": "^1.0",
        "ewallet/doctrine": "^1.0",
        "zendframework/zend-inputfilter": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "mockery/mockery": "^0.9.4",
        "fzaninotto/faker": "^1.5"
    }
}
