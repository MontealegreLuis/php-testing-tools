{
    "name": "ewallet/application",
    "description": "Ewallet application layer.",
    "license": "MIT",
    "version": "1.0",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ewallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": [
                "vendor/ewallet/doctrine/tests/src",
                "vendor/ewallet/domain/tests/src"
            ]
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../hexagonal/hexagonal"
        },
        {
            "type": "path",
            "url": "../domain"
        },
        {
            "type": "path",
            "url": "../doctrine"
        }
    ],
    "require": {
        "ewallet/domain": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "mockery/mockery": "^0.9.4",
        "nelmio/alice": "^2.0",
        "ewallet/doctrine": "^1.0"
    }
}
