{% extends 'layouts/email.html.twig' %}
{% set title = 'Funds transfer to ' ~ recipient.name %}
{% block content %}
<center>
    <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable">
        <tr>
            <td align="center" valign="top">
                <table border="0" cellpadding="10" cellspacing="0" width="600" id="templatePreheader">
                    <tr>
                        <td valign="top" class="preheaderContent">
                            <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                <tr>
                                    <td valign="top" align="center">
                                        <div style="color:#777777;font-family:Arial;font-size:10px;line-height:100%;">
                                            You have successfully made a transfer to {{ recipient.name }}
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
                    <tr>
                        <td align="center" valign="top">
                            <table width="600" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                <tr>
                                    <td align="left" width="428" valign="top">
                                        <table border="0" cellpadding="20" cellspacing="0" width="100%">
                                            <tr>
                                                <td valign="top" align="left" style="line-height:20px;font-size:12px;font-family:Arial;color:#505050;padding-bottom:0px;">
                                                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                        <tr>
                                                            <td valign="top" align="left">
                                                                <div style="line-height:20px;font-size:12px;font-family:Arial;color:#505050;font-style:italic;">
                                                                    <h1>Hi {{ sender.name }}</h1>
                                                                    <h3>You completed the following transaction</h3>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
                                <tr>
                                    <td valign="top" class="bodyContent">
                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                            <tr>
                                                <td valign="top">
                                                    <div style="color:#505050;font-family:Arial;font-size:11px;line-height:150%;text-align:left;">
                                                        <table border="1" cellpadding="0" cellspacing="0" width="100%" bordercolor="cecece" style="border-collapse: collapse;line-height:20px;font-size:12px;font-family:Arial;color:#505050;" bgcolor="f1f1f1">
                                                            <tr>
                                                                <td valign="top" align="center" colspan="2" style="padding:5px 10px;" bgcolor="f1f1f1">
                                                                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                                        <tr>
                                                                            <td valign="top" align="left" style="padding:0px;" bgcolor="">
                                                                                <table border="0" cellpadding="0" cellspacing="10" width="100%">
                                                                                    <tr>
                                                                                        <td valign="middle" align="right" style="padding:0px;font-weight:bold;font-size:14px;width:120px;" bgcolor="f1f1f1">
                                                                                            To member:
                                                                                        </td>
                                                                                        <td valign="top" align="left" style="padding:3px 10px;font-size:11px;width:400px;" bgcolor="ffffff">
                                                                                            {{ recipient.name }}
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td valign="middle" align="right" style="padding:0px;font-weight:bold;font-size:14px;" bgcolor="f1f1f1">
                                                                                            Amount:
                                                                                        </td>
                                                                                        <td valign="top" align="left" style="padding:3px 10px;font-size:11px;font-style:italic;" bgcolor="ffffff">
                                                                                            {{ money(amount) }}
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td valign="middle" align="right" style="padding:0px;font-weight:bold;font-size:14px;" bgcolor="f1f1f1">
                                                                                            On Date:
                                                                                        </td>
                                                                                        <td valign="top" align="left" style="padding:3px 10px;font-size:11px;" bgcolor="ffffff">
                                                                                            {{ occurredOn | date('m/d/Y') }}
                                                                                        </td>
                                                                                    </tr>
                                                                                </table>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                        <br />
                                                        <br />
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" valign="top">
                            <table border="0" cellpadding="10" cellspacing="0" width="600" id="templateFooter">
                                <tr>
                                    <td valign="top" class="footerContent">
                                        <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                            <tr>
                                                <td valign="top" width="400" align="center">
                                                    <div mc:edit="std_footer" style="line-height: 14px; font-family: arial, sans-serif; color: #777777; font-size: 11px">
                                                        Copyright &copy; {{ 'now' | date('Y') }} Ewallet, Inc, All rights reserved.
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <br />
            </td>
        </tr>
    </table>
</center>
{% endblock %}
