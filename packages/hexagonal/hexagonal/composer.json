{
    "name": "hexagonal/hexagonal",
    "description": "Transactional services, events and messaging.",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "doctrine/orm": "~2.6",
        "ewallet/domain": "~1.0",
        "fzaninotto/faker": "~1.8",
        "jms/serializer": "~1.13",
        "mockery/mockery": "~1.2",
        "php-amqplib/php-amqplib": "~2.8",
        "phpunit/phpunit": "~7.4",
        "vlucas/phpdotenv": "~2.5"
    },
    "suggest": {
        "doctrine/orm": "Transactional services and domain events via Doctrine ORM",
        "jms/serializer": "Serialize domain events before persisting them",
        "php-amqplib/php-amqplib": "Process domain events via messaging with RabbitMQ"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-0": {
            "Hexagonal\\": "src/",
            "Ports\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexagonal\\": "tests/src/",
            "Ewallet\\": "vendor/ewallet/domain/tests/src"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../doctrine"
        },
        {
            "type": "path",
            "url": "../../ewallet/domain"
        }
    ]
}
