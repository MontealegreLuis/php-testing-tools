{
    "name": "ewallet/messaging",
    "description": "Ewallet messaging",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ewallet/application": "~1.0",
        "symfony/console": "~4.2",
        "vlucas/phpdotenv": "~3.3",
        "zendframework/zend-mail": "~2.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "~1.8",
        "mockery/mockery": "~1.2",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpunit/phpunit": "~8.1",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Ewallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": "vendor/ewallet/application/tests/src"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../ewallet"
        }
    ]
}
