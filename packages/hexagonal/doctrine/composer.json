{
    "name": "hexagonal/doctrine",
    "description": "Persistency port for events and messaging.",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "doctrine/orm": "^2.5",
        "hexagonal/hexagonal": "^1.0",
        "jms/serializer": "^1.0"
    },
    "require-dev": {
        "ewallet/domain": "^1.0",
        "fzaninotto/faker": "^1.5",
        "mockery/mockery": "~1.2",
        "phpunit/phpunit": "~7.4"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-0": {
            "Ports\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexagonal\\": [
                "tests/src",
                "vendor/hexagonal/hexagonal/tests/src"
            ],
            "Ewallet\\": [
                "vendor/ewallet/domain/tests/src"
            ]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../ewallet/domain"
        },
        {
            "type": "path",
            "url": "../hexagonal"
        }
    ]
}
