{
    "name": "hexagonal/messaging",
    "description": "AMQP Messaging port.",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "hexagonal/hexagonal": "~1.0",
        "php-amqplib/php-amqplib": "^2.6"
    },
    "require-dev": {
        "ewallet/domain": "^1.0",
        "fzaninotto/faker": "^1.6",
        "jms/serializer": "^1.13",
        "mockery/mockery": "~1.2",
        "phpunit/phpunit": "~7.4",
        "vlucas/phpdotenv": "^2.3"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-0": {
            "Ports\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": "vendor/ewallet/domain/tests/src",
            "Hexagonal\\": [
                "vendor/hexagonal/hexagonal/tests/src",
                "tests/src"
            ]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../ewallet/domain"
        },
        {
            "type": "path",
            "url": "../hexagonal"
        }
    ]
}
