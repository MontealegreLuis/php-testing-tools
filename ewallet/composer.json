{
    "name": "ewallet/application",
    "description": "Electronic Wallet application (ewallet)",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "doctrine/annotations": "~1.11",
        "doctrine/cache": "~1.10",
        "doctrine/orm": "~2.7",
        "jms/serializer": "~3.10",
        "moneyphp/money": "~3.3",
        "nesbot/carbon": "~2.41",
        "pimple/pimple": "~3.3",
        "symfony/validator": "~5.1",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "behat/behat": "~3.8",
        "friendsofphp/php-cs-fixer": "~2.16",
        "fzaninotto/faker": "~1.9",
        "giorgiosironi/eris": "~0.11",
        "infection/infection": "~0.20",
        "mockery/mockery": "~1.4",
        "nelmio/alice": "~3.7",
        "php-amqplib/php-amqplib": "~2.12",
        "phpspec/phpspec": "~7.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.57",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "phpunit/phpunit": "~9.4",
        "rector/rector": "0.8.55",
        "roave/security-advisories": "dev-master",
        "twig/twig": "~3.1",
        "vlucas/phpdotenv": "~5.2"
    },
    "suggest": {
        "php-amqplib/php-amqplib": "To spread domain events via RabbitMQ",
        "twig/twig": "To share display formatting between applications via Twig"
    },
    "config": {
        "platform": {
            "php": "7.4.12"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-0": {
            "Ewallet\\": "src/",
            "Application\\": "src/",
            "Adapters\\": "src/"
        },
        "files": [
            "config/annotations.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "": [
                "tests/src",
                "tests/integration",
                "tests/unit"
            ]
        },
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ]
    },
    "bin": [
        "bin/setup"
    ]
}
