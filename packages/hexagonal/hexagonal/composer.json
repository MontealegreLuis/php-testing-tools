{
    "name": "hexagonal/hexagonal",
    "description": "Transactional services, events and messaging.",
    "license": "MIT",
    "version": "1.0",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hexagonal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexagonal\\": "tests/src/",
            "Ewallet\\": "vendor/ewallet/domain/tests/src"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../doctrine"
        },
        {
            "type": "path",
            "url": "../../ewallet/domain"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "ewallet/domain": "^1.0",
        "hexagonal/doctrine": "^1.0",
        "fzaninotto/faker": "^1.6"
    }
}
