{
    "name": "hexagonal/messaging",
    "description": "AMQP Messaging port.",
    "license": "MIT",
    "version": "1.0",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "Hexagonal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ewallet\\": "vendor/ewallet/domain/tests/src",
            "Hexagonal\\": "vendor/hexagonal/hexagonal/tests/src"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../doctrine"
        },
        {
            "type": "path",
            "url": "../../ewallet/domain"
        },
        {
            "type": "path",
            "url": "../hexagonal"
        }
    ],
    "require": {
        "hexagonal/doctrine": "^1.0",
        "php-amqplib/php-amqplib": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "mockery/mockery": "^0.9",
        "vlucas/phpdotenv": "^2.3",
        "ewallet/domain": "^1.0",
        "fzaninotto/faker": "^1.6"
    }
}
