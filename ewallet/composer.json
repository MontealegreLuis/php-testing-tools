{
    "name": "ewallet/application",
    "description": "Electronic Wallet application (ewallet)",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "beberlei/assert": "~3.1",
        "doctrine/annotations": "~1.6",
        "doctrine/cache": "~1.8",
        "doctrine/orm": "~2.6",
        "jms/serializer": "~1.13",
        "moneyphp/money": "~3.1",
        "nesbot/carbon": "~2.7",
        "pimple/pimple": "~3.2",
        "symfony/validator": "~4.2"
    },
    "require-dev": {
        "behat/behat": "~3.5",
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "~1.8",
        "giorgiosironi/eris": "~0.11",
        "mockery/mockery": "^1.2",
        "nelmio/alice": "~3.5",
        "php-amqplib/php-amqplib": "~2.8",
        "phpspec/phpspec": "~5.1",
        "phpstan/phpstan": "^0.11.7",
        "phpunit/phpunit": "~7.4",
        "roave/security-advisories": "dev-master",
        "twig/twig": "~2.5",
        "vlucas/phpdotenv": "~2.5"
    },
    "suggest": {
        "php-amqplib/php-amqplib": "To spread domain events via RabbitMQ",
        "twig/twig": "To share display formatting between applications via Twig"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-0": {
            "Ewallet\\": "src/",
            "Application\\": "src/",
            "Ports\\": "src/"
        },
        "files": [
            "config/annotations.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "": "tests/src"
        },
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ]
    },
    "bin": [
        "bin/setup"
    ]
}
